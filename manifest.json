{
  "manifest_version": 2,
  "name": "ProtoSound",
  "version": "0.5",
  
  "browser_action": {
	"default_icon": "icon.png",
	"default_popup": "popup.html",
	"default_title": "Protosound"
  },
  
  "permissions": [
	"webRequest","*://*.google.com/"
  ],
  
  "content_scripts": [
  	{
	"matches": ["http://www.google.com/*"],
	"js": ["protosound.js"],
	"run_at": "document_end"
  	}
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
